{
  "name": "my-pwa",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=20.19.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "npm run build:clean && tsc -b && vite build",
    "build:clean": "rimraf dist",
    "build:check": "npm run lint && npm run build",
    "lint": "eslint .",
    "preview": "vite preview",
    "prepare": "husky install",
    "push-server": "node push-server-simple.cjs",
    "dev:full": "concurrently \"npm run dev\" \"npm run push-server\"",
    "test:push": "curl -X POST http://localhost:3002/api/push/send-test"
  },
  "dependencies": {
    "firebase": "^12.4.0",
    "idb": "^8.0.3",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.35.0",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.2",
    "concurrently": "^9.2.1",
    "cors": "^2.8.5",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "express": "^5.1.0",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.43.0",
    "vite": "^7.1.6",
    "web-push": "^3.6.7"
  }
}
